{
	"BASE_DIR":"~/projects/sycamore_projects",
	"board":"dionysus",
	"PROJECT_NAME":"example_project",
	"TEMPLATE":"wishbone_template.json",
	"INTERFACE":{
		"filename":"ft_master_interface.v",
		"bind":{
			"i_ftdi_clk":{
				"loc":"ftdi_clk",
				"direction":"input"
			},
			"io_ftdi_data[7:0]":{
				"loc":"d[7:0]",
				"direction":"inout"
			},
			"i_ftdi_txe_n":{
				"loc":"txe_n",
				"direction":"input"
			},
			"o_ftdi_wr_n":{
				"loc":"wr_n",
				"direction":"output"
			},
			"i_ftdi_rde_n":{
				"loc":"rxe_n",
				"direction":"input"
			},
			"o_ftdi_rd_n":{
				"loc":"rd_n",
				"direction":"output"
			},
			"o_ftdi_oe_n":{
				"loc":"oe_n",
				"direction":"output"
			},
			"o_ftdi_siwu":{
				"loc":"siwua",
				"direction":"output"
			},
			"i_ftdi_suspend_n":{
				"loc":"suspend_n",
				"direction":"input"
			}
		}
	},
	"SLAVES":{
			"lcd":{
				"filename":"wb_nh_lcd.v",
				"BUS":{
					"mem":"mem1"
				},
				"bind":{
        "o_backlight_enable":{
          "loc":"LCD_BACKLIGHT_ENABLE",
          "direction":"output"
        },
        "o_register_data_sel":{
          "loc":"LCD_REGISTER_DATA_SEL",
          "direction":"output"
        },
        "o_write_n":{
          "loc":"LCD_WRITE_N",
          "direction":"output"
        },
        "o_read_n":{
          "loc":"LCD_READ_N",
          "direction":"output"
        },
        "io_data[7:0]":{
          "loc":"LCD_DATA[7:0]",
          "direction":"inout"
        },
        "o_cs_n":{
          "loc":"LCD_CS_N",
          "direction":"output"
        },
        "o_reset_n":{
          "loc":"LCD_RESET_N",
          "direction":"output"
        },
        "o_display_on":{
          "loc":"LCD_DISPLAY_ON",
          "direction":"output"
        }
			}
    },
    "lax1":{
      "filename":"wb_logic_analyzer.v",
      "bind":{
        "o_la_uart_tx":{
          "loc":"s0",
          "direction":"output"
        },
        "i_la_uart_rx":{
          "loc":"s1",
          "direction":"input"
        }
      }
    }
	},
  "MEMORY":{
		"mem1":{
			"filename":"wb_sdram.v",
			"bind":{
				"o_sdram_clk":{
					"loc":"sdram_clk",
					"direction":"output"
				},
				"o_sdram_cke":{
					"loc":"cke",
					"direction":"output"
				},
				"o_sdram_cs_n":{
					"loc":"cs_n",
					"direction":"output"
				},
				"o_sdram_ras":{
					"loc":"ras",
					"direction":"output"
				},
				"o_sdram_cas":{
					"loc":"cas",
					"direction":"output"
				},
				"o_sdram_we":{
					"loc":"we",
					"direction":"output"
				},
				"o_sdram_bank[1:0]":{
					"loc":"ba[1:0]",
					"direction":"output"
				},
				"o_sdram_addr[11:0]":{
					"loc":"a[11:0]",
					"direction":"output"
				},
				"io_sdram_data[15:0]":{
					"loc":"dq[15:0]",
					"direction":"inout"
				},
				"o_sdram_data_mask[1]":{
					"loc":"dqmh",
					"direction":"output"
				},
				"o_sdram_data_mask[0]":{
					"loc":"dqml",
					"direction":"output"
				}
			}
		}
	},
  "internal_bind":{
    "lax1_i_la_clk" : {
      "signal":"clk"
    },
    "lax1_i_la_data[0]":{
      "signal":"rst"
    },
    "lax1_i_la_data[1]":{
      "signal":"lcd_o_cs_n"
    },
    "lax1_i_la_data[2]":{
      "signal":"lcd_o_backlight_enable"
    },
    "lax1_i_la_data[3]":{
      "signal":"lcd_o_register_data_sel"
    },
    "lax1_i_la_data[4]":{
      "signal":"lcd_o_write_n"
    },
    "lax1_i_la_data[5]":{
      "signal":"lcd_o_read_n"
    },
    "lax1_i_la_data[6]":{
      "signal":"lcd_o_reset_n"
    },
    "lax1_i_la_data[7]":{
      "signal":"lcd_o_display_on"
    },
    "lax1_i_la_data[15:8]":{
      "signal":"LCD_DATA"
    }

  },

	"bind":{
    "clk":{
      "direction":"input",
      "loc":"clk"
    },
    "rst":{
      "direction":"input",
      "loc":"rst"
    }
	},
	"constraint_files":[
    "nh_lcd_constraints.ucf"
	]
}
