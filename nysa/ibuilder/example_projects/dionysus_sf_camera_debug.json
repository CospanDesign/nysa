{
	"BASE_DIR":"~/projects/sycamore_projects",
	"board":"dionysus",
	"PROJECT_NAME":"example_project",
	"TEMPLATE":"wishbone_template.json",
	"INTERFACE":{
		"filename":"ft_master_interface.v",
		"bind":{
			"i_ftdi_clk":{
				"loc":"ftdi_clk",
				"direction":"input"
			},
			"io_ftdi_data[7:0]":{
				"loc":"d[7:0]",
				"direction":"inout"
			},
			"i_ftdi_txe_n":{
				"loc":"txe_n",
				"direction":"input"
			},
			"o_ftdi_wr_n":{
				"loc":"wr_n",
				"direction":"output"
			},
			"i_ftdi_rde_n":{
				"loc":"rxe_n",
				"direction":"input"
			},
			"o_ftdi_rd_n":{
				"loc":"rd_n",
				"direction":"output"
			},
			"o_ftdi_oe_n":{
				"loc":"oe_n",
				"direction":"output"
			},
			"o_ftdi_siwu":{
				"loc":"siwua",
				"direction":"output"
			},
			"i_ftdi_suspend_n":{
				"loc":"suspend_n",
				"direction":"input"
			}
		}
	},
	"SLAVES":{
    "camera_i2c":{
      "filename":"wb_i2c.v",
      "bind":{
        "scl":{
          "loc":"I2C_SCL",
          "direction":"inout"
        },
        "sda":{
          "loc":"I2C_SDA",
          "direction":"inout"
        }
      }
		},
    "camera":{
      "filename":"wb_sf_camera.v",
			"BUS":{
				"mem":"mem1"
			},
      "PARAMETERS":{
        "BUFFER_SIZE":10
      },
      "bind":{
        "o_cam_rst":{
          "loc":"CAM_RST",
          "direction":"output"
        },
        "o_flash":{
          "loc":"FLASH",
          "direction":"output"
        },
        "o_cam_in_clk":{
          "loc":"CAM_CLK",
          "direction":"output"
        },
        "i_pix_clk":{
          "loc":"PIX_CLK",
          "direction":"input"
        },
        "i_flash_strobe":{
          "loc":"CAM_FLASH",
          "direction":"input"
        },
        "i_vsync":{
          "loc":"CAM_VSYNC",
          "direction":"input"
        },
        "i_hsync":{
          "loc":"CAM_HSYNC",
          "direction":"input"
        },
        "i_pix_data":{
          "loc":"PIX_DATA[7:0]",
          "direction":"input"
        }
      }
    },
    "lax1":{
      "filename":"wb_logic_analyzer.v",
      "PARAMETERS":{
        "DEPTH":9
      },
      "bind":{
        "o_la_uart_tx":{
          "loc":"PMODB1",
          "direction":"output"
        },
        "i_la_uart_rx":{
          "loc":"PMODB2",
          "direction":"input"
        }
      }
    }
	},
  "MEMORY":{
		"mem1":{
			"filename":"wb_bram.v"
		}

	},
  "internal_bind":{
    "lax1_i_la_clk" : {
      "signal":"PIX_CLK"
    },
    "lax1_i_la_data":{
      "signal":"camera_debug"
    }
  },

	"bind":{
    "PMODB1":{
      "direction":"output",
      "loc":"STATUS_LED"
    },
    "clk":{
      "direction":"input",
      "loc":"clk"
    },
    "rst":{
      "direction":"input",
      "loc":"rst"
    }
	},
	"constraint_files":[
    "camera_constraints.ucf"
	]
}
